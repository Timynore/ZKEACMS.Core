@using ZKEACMS.FormGenerator.Models
@using ZKEACMS.FormGenerator
@model FormData
@{
    string link = $"{hostOptionProvider.GetOrigin()}/admin/FormData/Edit/{Model.ID}";
    Func<string, string> L = localize.Get;
}
@inject ZKEACMS.IHostOptionProvider hostOptionProvider
@inject Easy.ILocalize localize

<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <style>
        body {
            font-size: 16px;
        }

        h1, h2, h3, h4, h5, h6 {
            margin-top: 0;
            margin-bottom: 1rem;
        }

        hr {
            border: 0;
            border-top: 1px solid #ccc;
        }

        p {
            margin-top: 0;
            margin-bottom: 0.5rem;
        }

            h1:last-child, h2:last-child, h3:last-child, h4:last-child, h5:last-child, h6:last-child, p:last-child {
                margin-bottom: 0;
            }
    </style>
</head>

<body style="background: #efefef;">
    <div style="background: #fff;border: 1px solid #ccc; max-width: 600px; margin: 3rem auto 0 auto;">
        <div style="padding: 2rem;">
            <h3>
                @L("New form data from:") @(Model.Form.Title)
            </h3>
            <table border="1" cellspacing="0" cellpadding="5" bgcolor="" style="border-color: #eee;">
                <thead>
                    <tr>
                        <th>@L("Field")</th>
                        <th>@L("Value")</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Form.FormFields.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Form.FormFields[i].DisplayName
                            </td>
                            <td>
                                @Html.DisplayFieldValue(Model.Form.FormFields[i])
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p style="text-align: center;">
                <a style="display: inline-block; background: #2196F3;border: 1px solid #2589d8; text-decoration: none; padding: 0.6rem 1rem; color: #fff;"
                   href="@link"
                   target="_blank">@L("View")</a>
            </p>
        </div>
        <div style="padding: 1rem; border-top: 1px solid #ccc; font-size: 80%;">
            <p>
                <a href="@hostOptionProvider.GetOrigin()" target="_blank">
                    @L("ZKEASOFT")
                </a>
            </p>
        </div>
    </div>

</body>
</html>